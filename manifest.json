{
  "name": "Papers Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "16.png",
    "persistent": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "web_accessible_resources": [{
    "resources": [
      "layui/*",
      "layui/css/*",
      "layui/css/modules/layer/default/*"
    ],
    "matches": ["<all_urls>"]
  }]
}
